<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>
<p>Completed - <%=  @task.completed %></p>

<p><%= link_to "Edit", tasks_path(@task) %></p>

<p><%= link_to "Delete #{@task.title}", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>

<p><%= link_to "Back to all task", tasks_path %></p>
